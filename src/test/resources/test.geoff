/*
 * Triangle of bidirectional relationships
 *
 * @order 3
 * @size 6
 * @hook alice :Person name=Alice
 * @hook bob :Person name=Bob
 * @hook carol :Person name=Carol
 * @rel alice KNOWS bob
 * @rel alice KNOWS carol
 * @rel bob KNOWS alice
 * @rel bob KNOWS carol
 * @rel carol KNOWS alice
 * @rel carol KNOWS bob
 *
 */

:Person:name:=>(alice {"name":"Alice", "age":20})
:Person:name:=>(bob {"name":"Bob", "age":44})
:Person:name:=>(carol {"name":"Carol", "age":34})

(alice)<-[:KNOWS]->(bob)<-[:KNOWS]->(carol)<-[:KNOWS]->(alice)

